<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="stylesheet" href="/path/to/font-awesome/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script>
       
        function openfile(fileInput){
            if(fileInput.files && fileInput.files[0]){
                var reader =new FileReader();
                reader.onload=function(e){
                    $('#img').attr('src',e.target.result);
                }
                reader.readAsDataURL(fileInput.files[0]);
            }
            var filename = $('input[type=file]').val().replace(/.*(\/|\\)/, '');
            $('#image').val(filename);
        }
    
    </script>
</head>
<body>
    
        <nav>
            <div class="container">
                <h1><center>Quản lý danh mục</center></h1>
                <div class="text-center">
                    
                        <table class="table table ">
                            <thead>
                                <tr>
                                    <th >Name</th>
                                    <th >image</th>
                                    <th class="action">action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(typeof categories !== 'undefined' && categories.length > 0) { %>
                                    <% categories.forEach(function(category, index) { %>
                                <tr>
                                    <td class="cart_description">
                                       
                                            <div class="pt-1"><%- category.name %></div>
                                    </td>
                                    
                                    <td class="qty">
                                        <img src="/img/<%- category.image %>" width="200px" alt="<%- category.name %>" loading="lazy">
                                    </td>
                                    
                                    <td class="action">
                                       
                                      
                                        <a href="/admin/categories/delete/:<%- category.id %>" class="btn btn-danger">DELETE</a>
                                    
                                        
                                    </td>
                                    <% }) %>
                                    <% } %>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <form action="/admin/categories/add" method="post">
                                       <td><input type="text" name ="name"></td> 
                                       <td>                               
                                           </div>
                                           <input type="file"   accept="image/png, image/jpeg" onchange="openfile(this)">
                                            <img src="" alt="" id ="img">
                                            <input type="text" id='image' name="image">
                                        </td> 
                                       <td>
                                        <button type="submit" class="btn btn-primary"> ADD</button></td> 
                                    </form>
                                </tr>
                            </tfoot>
                        </table>	
                        
                    </div>
                    
                </div>
            </div>
        </nav>
    
</body>
</html>